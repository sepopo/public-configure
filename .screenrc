defencoding UTF-8

# prefix キーの設定　Ctrl + t
escape ^Tt

# onにすると、ビープを鳴らすときに錫際に音を鳴らさず、下のメッセージ領域にメッセージを表示させる。
vbell on

# 最終行にウィンドウ一覧を表示
hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w"
# ステータスラインの表示。
defhstatus I^En:^EtI

# offにするとスタートアップ画面を表示させなくする
startup_message off

# onにしておくとネットワークが切れても自動的にdetachしてくれる
autodetach on

# bind 設定
markkeys h=^B:l=^F:$=^E:^U=^Z:^D=^V

bind - split
bind o focus
bind g only
bind q remove

sorendition "+rb .G"

defbce "on"
term xterm-256color
